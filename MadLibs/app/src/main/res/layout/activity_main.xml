<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.raymour.madlibs.MainActivity">

        <TextView
            android:id="@+id/information"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="Enter your choice of words: ENJOY!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Insert Adjective"
            android:gravity="center"
            android:id="@+id/text_adjective_one"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Insert Adjective"
            android:gravity="center"
            android:id="@+id/text_adjective_two"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Insert Noun"
            android:gravity="center"
            android:id="@+id/text_noun_one"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Insert Noun"
            android:gravity="center"
            android:id="@+id/text_noun_two"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Insert a type of animal (plural)"
            android:gravity="center"
            android:id="@+id/animal"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Insert the name of a game"
            android:gravity="center"
            android:id="@+id/game"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:gravity="center"
            android:id="@+id/submit_button"/>

</LinearLayout>
